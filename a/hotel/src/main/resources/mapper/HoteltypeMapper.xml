<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ateam05.hotel.mapper.HoteltypeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ateam05.hotel.model.domain.Hoteltype">
        <id column="id" property="id" />
        <result column="typename" property="typename" />
        <result column="is_deleted" property="isdeleted" />
    </resultMap>

    <select id="selectIsdeleted" resultType="com.ateam05.hotel.model.dto.HoteltypeDTO">
        select id,typename
        from hoteltype
        where is_deleted = 0
    </select>

</mapper>
